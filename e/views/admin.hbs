<div class="container mt-4">
    <main role="main">
        <div class="row">
            <div class="col">
                <h1>Orders</h1>
                <div class="table-responsive-sm">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Order</th>
                                <th>Total</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each order}}
                                <tr>
                                    <td>{{this._id}}</td>
                                    <td>{{this.order}}</td>
                                    <td>{{this.total}}</td>
                                    <td>
                                        <a class="btn btn-primary" href="/order/{{this._id}}">Update</a>
                                        <a class="btn btn-danger" href="/order/delete/{{this._id}}">Delete</a>
                                    </td>
                                </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>
</div>

<!-- SweetAlert2 -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    // Flash messages passed from router
    const message = "{{message}}";  // router passes via ?message=...&type=...
    const type = "{{type}}";        // 'success' or 'error'

    if (message) {
        Swal.fire({
            toast: true,
            position: 'top-end',
            icon: type || 'success',
            title: message,
            showConfirmButton: false,
            timer: 2000,
            timerProgressBar: true
        });
    }
</script>